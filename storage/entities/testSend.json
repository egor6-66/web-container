{
  "name": "testSend",
  "commonStyle": {
    "nameStyle": {
      "width": 106
    },
    "wrapperStyle": {
      "width": 360
    }
  },
  "items": [
    {
      "type": "select",
      "name": "senderUsername",
      "displayName": "конфигурация",
      "placeholder": "выбирите конфигурацию",
      "defaultValue": "",
      "required": true,
      "selectOnly": true,
      "options": {
        "options": "/http://172.16.211.140:8082/api/v1/mail/sender/configuration",
        "pathToArray": "content",
        "displayKey": "host",
        "payloadKey": "username"
      },
      "validation": {
        "type": "string"
      }
    },
    {
      "type": "select",
      "name": "recipient",
      "displayName": "получатель",
      "placeholder": "выбирите получателя",
      "defaultValue": "",
      "required": true,
      "selectOnly": true,
      "options": {
        "options": "/http://172.16.211.140:8082/api/v1/recipient",
        "pathToArray": "content",
        "displayKey": "email",
        "payloadKey": "email"
      },
      "validation": {
        "type": "string"
      }
    },
    {
      "type": "select",
      "name": "templateName",
      "displayName": "шаблон",
      "placeholder": "выбирите шаблон",
      "defaultValue": "",
      "required": true,
      "selectOnly": true,
      "options": {
        "options": "/http://172.16.211.140:8082/api/v1/mail/letter/template",
        "pathToArray": "content",
        "displayKey": "displayName",
        "payloadKey": "name"
      },
      "validation": {
        "type": "string"
      }
    },
    {
      "type": "button",
      "name": "sendWithFields",
      "displayName": "отправить",
      "action": "sendWithFields",
      "state": {
        "disabled": "!isValid"
      }
    }
  ]
}
{
  "name": "report",
  "displayName": "Отчеты",
  "layout": {
    "type": "column"
  },
  "commonStyle": {
    "nameStyle": {
      "width": 146
    },
    "wrapperStyle": {
      "width": 380
    }
  },
  "items": [
    {
      "type": "section",
      "name": "updateActions",
      "layout": {
        "type": "row"
      },
      "state": {
        "visible": "mode === 'preview' || mode === 'update'"
      },
      "items": [
        {
          "type": "icon",
          "name": "update",
          "icon": "edit",
          "method": "setMode(mode === 'preview' ? 'update' : 'preview')",
          "state": {
            "active": "mode === 'update'"
          }
        },
        {
          "type": "icon",
          "name": "delete",
          "icon": "remove",
          "action": "delete",
          "state": {
            "visible": "mode === 'update'"
          }
        }
      ]
    },
    {
      "type": "text",
      "name": "name",
      "displayName": "название",
      "placeholder": "название шаблона",
      "defaultValue": "",
      "required": true,
      "validation": {
        "type": "string"
      }
    },
    {
      "type": "text",
      "name": "displayName",
      "displayName": "заголовок",
      "placeholder": "заголовок шаблона",
      "defaultValue": "",
      "required": true,
      "validation": {
        "type": "string"
      }
    },
    {
      "type": "select",
      "name": "period",
      "displayName": "переод",
      "placeholder": "переод времени",
      "defaultValue": "",
      "required": true,
      "selectOnly": true,
      "options": {
        "options": "/http://172.16.211.140:8082/api/v1/mail/report/dictionaries/periods",
        "displayKey": "displayName",
        "payloadKey": "name"
      },
      "validation": {
        "type": "string"
      }
    },
    {
      "type": "select",
      "name": "recipients",
      "displayName": "получатель",
      "placeholder": "выберите получателя",
      "defaultValue": "",
      "required": true,
      "selectOnly": true,
      "options": {
        "options": "/http://172.16.211.140:8082/api/v1/recipient",
        "pathToArray": "content",
        "displayKey": "email",
        "payloadKey": "id"
      },
      "validation": {
        "type": "string"
      }
    },
    {
      "type": "select",
      "name": "mailTemplate",
      "displayName": "шаблон",
      "placeholder": "выберите шаблон",
      "defaultValue": "",
      "required": true,
      "selectOnly": true,
      "options": {
        "options": "/http://172.16.211.140:8082/api/v1/mail/letter/template",
        "pathToArray": "content",
        "displayKey": "displayName",
        "payloadKey": "id"
      },
      "validation": {
        "type": "string"
      }
    },
    {
      "type": "select",
      "name": "mailSenderConfiguration",
      "displayName": "конфигурация",
      "placeholder": "выберите конфигурацию",
      "defaultValue": "",
      "required": true,
      "selectOnly": true,
      "options": {
        "options": "/http://172.16.211.140:8082/api/v1/mail/sender/configuration",
        "pathToArray": "content",
        "displayKey": "host",
        "payloadKey": "id"
      },
      "validation": {
        "type": "string"
      }
    },
    {
      "type": "select",
      "name": "integrationSystemName",
      "displayName": "система интеграции",
      "placeholder": "выберите интеграцию",
      "defaultValue": "",
      "required": true,
      "options": [],
      "validation": {
        "type": "string"
      }
    },
    {
      "type": "date",
      "name": "integrationEndpointName",
      "displayName": "переод интеграции",
      "placeholder": "выберите переод",
      "defaultValue": "",
      "required": true,
      "validation": {
        "type": "string"
      }
    },
    {
      "type": "select",
      "name": "attachmentNamePattern",
      "displayName": "паттерн",
      "placeholder": "выберите паттерн",
      "defaultValue": "",
      "required": true,
      "options": [],
      "validation": {
        "type": "string"
      }
    },
    {
      "type": "select",
      "name": "resultProcessingType",
      "displayName": "процесс",
      "placeholder": "выберите процесс",
      "defaultValue": "",
      "required": true,
      "options": [],
      "validation": {
        "type": "string"
      }
    },
    {
      "type": "date",
      "name": "scheduledTime",
      "displayName": "время",
      "placeholder": "выберите время",
      "defaultValue": "",
      "required": true,
      "validation": {
        "type": "string"
      }
    },
    {
      "type": "checkbox",
      "name": "enabled",
      "displayName": "разблокирован",
      "defaultValue": "",
      "required": true,
      "validation": {
        "type": "string"
      }
    },
    {
      "type": "button",
      "name": "addBtn",
      "displayName": "добавить",
      "action": "create",
      "state": {
        "visible": "mode === 'create'",
        "disabled": "!isValid"
      }
    },
    {
      "type": "button",
      "name": "updateBtn",
      "displayName": "изменить",
      "action": "update",
      "state": {
        "visible": "mode === 'update'",
        "disabled": "!isDirty || !isValid"
      }
    }
  ]
}